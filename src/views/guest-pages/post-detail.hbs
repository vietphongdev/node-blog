<div class="row">

    <!-- Post Content Column -->
    <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4">{{post.title}}</h1>

        <!-- Author -->
        <p class="lead">
            by
            <a href="/user/{{user._id}}">
                {{post.user.firstName}}
                {{post.user.lastName}}
            </a>
        </p>

        <hr>

        <!-- Category and Date -->
        <div class="row container d-flex justify-content-between">
            <div>
                <p style="color: #9b9b9b;">
                    <span>Category:</span>
                    {{ post.category.title }}
                </p>
            </div>
            <div style="font-size: 14px;">
                <div style="color: #9b9b9b;">
                    <span>Post on:</span>
                    {{ toDateString post.createdAt }}
                </div>
                <div style="color: #9b9b9b;">
                    <span>Last update:</span>
                    {{ toDateString post.updatedAt }}
                </div>
            </div>
        </div>

        <hr>

        <!-- Preview Image -->
        <img class="img-fluid rounded" src="{{post.postThumbnail}}" alt="">

        <hr>

        <!-- Post Content -->
        <p class="lead">{{post.content}}</p>

        <!-- Single Comment -->

        {{#each comments}}
        {{#if isApproved}}
        <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
            <div class="media-body">
                <h5 class="mt-0">{{user.firstName}} {{user.lastName}}</h5>
                {{body}}
            </div>
        </div>
        {{/if}}

        {{/each}}

        <hr>

        <!-- Comments Form -->
        <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
                <form action="/posts/{{post._id}}" method="post">
                    <div class="form-group">
                        <textarea class="form-control" rows="3" name="comment_body" {{disabledHelper user}}></textarea>
                        <input type="hidden" name="id" value="{{post._id}}">
                    </div>
                    <button type="submit" class="btn btn-primary" {{disabledHelper user}}>Submit</button>
                </form>
                {{#unless user}}
                <div class="media mt-4 text-muted">
                    Please login to put comment
                </div>
                {{/unless}}
            </div>
        </div>


    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">

        <!-- Search Widget -->
        <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>

        <!-- Categories Widget -->
        <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                            <li>
                                <a href="#">Web Design</a>
                            </li>
                            <li>
                                <a href="#">HTML</a>
                            </li>
                            <li>
                                <a href="#">Freebies</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                            <li>
                                <a href="#">JavaScript</a>
                            </li>
                            <li>
                                <a href="#">CSS</a>
                            </li>
                            <li>
                                <a href="#">Tutorials</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Side Widget -->
        <div class="card my-4">
            <h5 class="card-header">Side Widget</h5>
            <div class="card-body">
                You can put anything you want inside of these side widgets. They are easy to use, and feature the new
                Bootstrap 4 card containers!
            </div>
        </div>

    </div>

</div>
<!-- /.row -->